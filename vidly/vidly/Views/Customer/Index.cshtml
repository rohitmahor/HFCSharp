@model IEnumerable<vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<button class="btn btn-primary" style="margin: 0 0 10px 0;" onclick="location.href='@Url.Action("New", "Customer")'">New Customer</button>

@if (!Model.Any())
{
    <text>We don't have any customer.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Customers
                </th>
                <th>
                    Membership type
                </th>
                <th>
                    Discount Rate
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "Details", "Customer", new { id = customer.Id }, null)</td>
                    <td>@customer.MembershipType.Name</td>
                    <td>@customer.MembershipType.DiscountRate %</td>
                </tr>
            }
        </tbody>
    </table>
}


