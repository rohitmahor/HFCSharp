@model IEnumerable<vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movies</h2>
<button class="btn btn-primary" style="margin: 0 0 10px 0;" onclick="location.href='@Url.Action("New", "Movie")'">New Movie</button>

@if (!Model.Any())
{
    <text>We don't have any movie.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Movies
                </th>
                <th>
                    Genre
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Details", "Movie", new { id = movie.Id }, null)</td>
                    <td>@movie.Genre</td>
                </tr>
            }
        </tbody>
    </table>
}
